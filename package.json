{
  "name": "next-tinynewsdemo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "clear": "node script/clear.js",
    "populate": "node script/populate.js",
    "bootstrap": "node script/bootstrap.js",
    "build": "next build",
    "start": "next start",
    "export": "next build && next export",
    "purgecss": "purgecss --css styles/bulma.css --content pages/** components/** --output ./purge.css",
    "lint": "eslint ./components/** ./pages/** ./lib/** -c .eslintrc.json --fix --ext js,jsx",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write ./components/** ./pages/** ./lib/**",
    "postinstall": "cd ./node_modules/react-aws-s3 && npm install && npm run build"

  },
  "lint-staged": {
    "./components/**": "npm run format",
    "./pages/**": "npm run format",
    "./lib/**": "npm run format",
    "./styles/**": "npm run format"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^3.1.3",
    "bulma": "^0.9.0",
    "date-fns": "^2.14.0",
    "dotenv": "^8.2.0",
    "fetch-cookie": "^0.10.1",
    "formik": "^2.1.4",
    "graphql-request": "^2.0.0",
    "journalize": "^2.4.0",
    "local-storage-fallback": "^4.1.1",
    "next": "^10.0.1",
    "node-fetch": "^2.6.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^6.7.0",
    "purgecss": "^2.3.0",
    "react": "^17.0.1",
    "react-aws-s3": "https://github.com/news-catalyst/react-aws-s3.git",
    "react-dom": "^17.0.1",
    "react-ga": "^3.1.2",
    "react-intersection-observer": "^8.27.1",
    "react-mailchimp-subscribe": "^2.1.0",
    "react-player": "^2.5.0",
    "react-scroll-percentage": "^4.2.0",
    "react-twitter-embed": "^3.0.3",
    "sass": "^1.26.9",
    "web-vitals": "^0.2.3"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "2.0.5"
  }
}
